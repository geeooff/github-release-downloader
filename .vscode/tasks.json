{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "dotnet: build",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "command": "dotnet",
      "type": "process",
      "options": {
        "cwd": "${workspaceFolder}/src"
      },
      "args": [
        "build",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "dotnet: publish",
      "group": "none",
      "command": "dotnet",
      "type": "process",
      "options": {
        "cwd": "${workspaceFolder}/src"
      },
      "args": [
        "publish",
        "--use-current-runtime",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "dotnet: publish w/ arch",
      "group": "none",
      "command": "dotnet",
      "type": "process",
      "options": {
        "cwd": "${workspaceFolder}/src"
      },
      "args": [
        "publish",
        "--arch", "${input:arch}",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile"
    }
  ],
  "inputs": [
    {
      "id": "arch",
      "type": "pickString",
      "description": "Pick up the target architecture",
      "default": "x64",
      "options": [
        "x64",
        "arm64"
      ]
    }
  ]
}